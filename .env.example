# n8n workflow versioning system - environment variables
# copy this file to .env and fill in the values

# ------------------------------------------------------------------------------
# database configuration
# ------------------------------------------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_USER=dbuser
POSTGRES_PASSWORD=dbpassword_change_me
POSTGRES_DB=app_db
POSTGRES_DATABASE=app_db

# ------------------------------------------------------------------------------
# redis configuration
# ------------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379

# ------------------------------------------------------------------------------
# n8n configuration
# ------------------------------------------------------------------------------
# encryption key must be at least 24 characters
# IMPORTANT: keep this consistent across all services (n8n, workers, init)
N8N_ENCRYPTION_KEY=change-me-min-24-characters

# n8n host configuration
N8N_HOST=localhost
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:5678/

# owner account auto-setup (skips setup wizard)
N8N_OWNER_EMAIL=admin@admin.local
N8N_OWNER_PASSWORD=password

# ------------------------------------------------------------------------------
# watch server configuration
# ------------------------------------------------------------------------------
WATCH_SERVER_PORT=3456
WATCH_SERVER_SECRET=local-webhook-secret

# ------------------------------------------------------------------------------
# credential env vars
# ------------------------------------------------------------------------------
# these vars are passed to n8n services via env_file
# document defaults in packages/n8n/docker-compose.yml (x-n8n-credential-yaml-file)
# add vars here that match your credentials/manifest.yml
TEST_HEADER_NAME=X-API-Key
TEST_HEADER_VALUE=test-secret-key-12345
# MY_API_KEY=your-api-key
