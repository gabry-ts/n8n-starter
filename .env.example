# n8n-starter environment variables
# copy to .env and fill in real values

# ── general ──
TZ=UTC

# ── database ──
POSTGRES_HOST=postgres
POSTGRES_USER=n8n
POSTGRES_PASSWORD=change-me-strong-password
POSTGRES_DB=n8n
POSTGRES_DATABASE=n8n

# ── redis ──
REDIS_HOST=redis
REDIS_PORT=6379

# ── n8n ──
# encryption key must be at least 24 characters
# IMPORTANT: keep this consistent across all services (n8n, workers, init)
N8N_ENCRYPTION_KEY=change-me-min-24-characters-long
N8N_HOST=localhost
N8N_PROTOCOL=http
WEBHOOK_URL=http://localhost:12001/

# owner account auto-setup (skips setup wizard)
N8N_OWNER_EMAIL=admin@admin.local
N8N_OWNER_PASSWORD=change-me-owner-password

# ── watch-server ──
WATCH_SERVER_PORT=3456
WATCH_SERVER_SECRET=change-me-webhook-secret
N8N_INTERNAL_URL=http://n8n:5678

# ── credential secrets ──
# these vars are passed to n8n services via env_file
# add vars here that match your credentials/manifest.yml
# TEST_HEADER_NAME=X-API-Key
# TEST_HEADER_VALUE=your-api-key-here
# OPENAI_ACCOUNT_APIKEY=sk-your-openai-key

# ── smtp (optional) ──
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-smtp-password
